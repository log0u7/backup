#!/usr/bin/env bash

set -e

if [[ -n "${DEBUG}" ]]; then
  set -x
fi

dir=$1
filepath=$2
zip=$3
exclude_paths=$4
mark=$5

set +e
pack "${dir}" "${filepath}" "${zip}" "${exclude_paths}" "${mark}"
exitcode=$?

if [ "$exitcode" != "1" ] && [ "$exitcode" != "0" ]; then
  exit $exitcode
fi

set -e

stat -c "RESULT=%s" "${filepath}"
