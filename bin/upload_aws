#!/usr/bin/env bash

set -e

flags=""

if [[ -n "${DEBUG}" ]]; then
  set -x
else
  flags="${flags} --no-progress"
fi

filepath=$1
bucket=$2
destination=$3
max_concurrent_requests=$4
max_bandwidth=$5
storage_class=$6
content_disposition=$7

configure_aws "${max_concurrent_requests}" "${max_bandwidth}"

if [[ "${storage_class}" ]]; then
  flags="${flags} --storage-class ${storage_class}"
fi
if [[ "${content_disposition}" ]]; then
  flags="${flags} --content-disposition ${content_disposition}"
fi

aws s3 cp "${filepath}" "s3://${bucket}/${destination}" $flags
