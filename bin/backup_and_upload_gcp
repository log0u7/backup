#!/usr/bin/env bash

set -e

flags=""
if [[ -n "${DEBUG}" ]]; then
  set -x
fi

dir=$1
gzip=$2
exclude_paths=$3
mark=$4
sa_key_path=$5
bucket=$6
destination=$7
storage_class=$8

if [[ "${storage_class}" ]]; then
  flags="${flags} -s ${storage_class}"
fi

configure_gcp "${sa_key_path}"
pack "${dir}" "-" "${gzip}" "${exclude_paths}" "${mark}" | gsutil cp $flags "-" "gs://${bucket}/${destination}"
