#!/usr/bin/env bash

set -e

flags=""

if [[ -n "${DEBUG}" ]]; then
  set -x
else
  flags="${flags} --no-progress"
fi

filepath=$1
bucket=$2
region=$3
max_concurrent_requests=$4
max_bandwidth=$5
storage_class=$6

aws_configure "${max_concurrent_requests}" "${max_bandwidth}"

if [[ "${storage_class}" ]]; then
  flags="${flags} --storage-class ${storage_class}"
fi

aws s3 cp "${filepath}" "s3://${bucket}/" --region "${region}" $flags
