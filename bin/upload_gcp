#!/usr/bin/env bash

set -e

flags=""

if [[ -n "${DEBUG}" ]]; then
  set -x
fi

sa_key_path=$1
filepath=$2
bucket=$3
destination=$4
storage_class=$5

configure_gcp "${sa_key_path}"

if [[ "${storage_class}" ]]; then
  flags="${flags} -s ${storage_class}"
fi

gsutil cp $flags "${filepath}" "gs://${bucket}/${destination}"
